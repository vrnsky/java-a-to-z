<hibernate-mapping>
    <class name="model.Item" table="items">
        <id name="id" type="int" column="id">
            <generator class="identity"/>
        </id>
        <property name="desc" column="description" lazy = "false"/>
        <property name="creationTime" column="created" lazy="false"/>
        <property name="done" column="done" lazy="false" />
    </class>
</hibernate-mapping>